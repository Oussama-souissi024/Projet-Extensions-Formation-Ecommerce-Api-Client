@model Formation_Ecommerce_Client.Models.ViewModels.Categories.CategoryViewModel

@{
    ViewData["Title"] = "Supprimer la Catégorie";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Supprimer la Catégorie</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Supprimer</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Retour
        </a>
    </div>
</form>
