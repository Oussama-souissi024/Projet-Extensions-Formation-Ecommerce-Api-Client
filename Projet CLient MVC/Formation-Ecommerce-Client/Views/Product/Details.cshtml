@model Formation_Ecommerce_Client.Models.ViewModels.Products.ProductViewModel

@{
    ViewData["Title"] = "Détails du Produit";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" />
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                    <span class="text-muted">Pas d'image disponible</span>
                </div>
            }
        </div>
        <div class="col-md-6">
            <h1 class="mb-3">@Model.Name</h1>
            <p class="text-muted mb-3">Catégorie: @Model.CategoryName</p>
            <h3 class="text-primary mb-4">@Model.Price.ToString("C")</h3>
            
            <div class="mb-4">
                <h5>Description</h5>
                <p>@Model.Description</p>
            </div>

            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mb-4">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="row align-items-center">
                    <div class="col-auto">
                        <label for="quantity" class="col-form-label">Quantité:</label>
                    </div>
                    <div class="col-auto">
                        <input type="number" id="quantity" name="quantity" value="1" min="1" max="100" class="form-control" style="width: 80px;" />
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-cart-plus"></i> Ajouter au panier
                        </button>
                    </div>
                </div>
            </form>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Modifier
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
