@using Formation_Ecommerce_Client.Models.ViewModels.Auth
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Mot de passe oublié";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Réinitialisation du mot de passe</h4>
                </div>
                <div class="card-body">
                    <p>Entrez votre adresse email pour recevoir un lien de réinitialisation de mot de passe.</p>
                    
                    <form method="post" asp-action="ForgotPassword">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" name="Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                Envoyer le lien
                            </button>
                            <a asp-action="Login" class="btn btn-link">Retour à la connexion</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
